<?xml version="1.0"?>
<launch>

  <!-- send urdf to param server -->
	<param name="robot_description" command="$(find xacro)/xacro --inorder '$(find udacity_bot)/urdf/udacity_bot.xacro'" />

<!-- Adding one node that uses the package joint_state_publisher that publishes joint state messages for the robot, such as the angles for the non-fixed joints. This will be sending fake joint values -->
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="use_gui" value="false"/>
  </node>

<!-- The second node uses the robot_state_publisher package that publishes the robot's state to tf (transform tree).  -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen"/>
  
</launch>
